{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "crowdband",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "crowdband",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Assemble This Week's Song",
        "description": "Manually trigger song assembly",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/assemble-song"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduledJobs": [
    {
      "name": "weekly-song-assembly",
      "cron": "0 23 * * 5",
      "endpoint": "/internal/jobs/assemble-weekly-song"
    }
  ],
  "dev": {
    "subreddit": "crowdband_dev"
  }
}
